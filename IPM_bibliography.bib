  year = {2018},
  keywords = {transmission,movement ecology,Disease ecology,exposure,host heterogeneity},
  pages = {588-604},
  file = {/home/aketz/Zotero/storage/4CGWEMKC/Dougherty et al. - Going through the motions incorporating movement .pdf;/home/aketz/Zotero/storage/MFRD4GCM/ele.html}
}

@article{webb2010,
