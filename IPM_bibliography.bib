  journal = {Preventive Veterinary Medicine},
  author = {Foley, Aaron M. and Goolsby, John A. and {Ortega-S.}, Alfonso and {Ortega-S.}, J. Alfonso and {P\'erez de Le\'on}, A. and Singh, Nirbhay K. and Schwartz, Andy and Ellis, Dee and Hewitt, David G. and Campbell, Tyler A.},
