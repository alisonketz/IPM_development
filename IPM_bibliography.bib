  year = {2009},
  keywords = {elk,cervus elaphus,yellowstone,landscape,habitat use,sexual segregation,an,goals of ecology is,noninvasive sampling,one of the fundamental,the relationship animals have,to understand,with their environments},
  pages = {971--979}
