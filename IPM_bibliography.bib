  journal = {Journal of Wildlife Management},
  author = {a. Montgomery, Robert and Roloff, Gary J. and Millspaugh, Joshua J.},
  year = {2013},
  keywords = {elk,Cervus elaphus,Euclidean distance,GIS,roads,utilization distribution,visibility},
  pages = {313--325}
}

