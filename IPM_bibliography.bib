@article{haley2011,
  title = {Detection of {{Chronic Wasting Disease Prions}} in {{Salivary}}, {{Urinary}}, and {{Intestinal Tissues}} of {{Deer}}: {{Potential Mechanisms}} of {{Prion Shedding}} and {{Transmission}}},
