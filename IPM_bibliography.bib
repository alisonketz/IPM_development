  number = {12},
  journal = {Ecology and Evolution},
  author = {Dugal, Cherie J. and van Beest, Floris M. and Wal, Eric Vander and Brook, Ryan K.},
  keywords = {chronic wasting disease,elk,mortality,Bovine tuberculosis,hunter-kill,protected area,resource selection function,selection ratio},
