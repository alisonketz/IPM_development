  journal = {Ecological Applications},
  author = {Robinson, Stacie J. and Samuel, Michael D. and Johnson, Chad J. and Adams, Marie and McKenzie, Debbie I.},
  year = {2012},
  pages = {1050-1059},
  file = {/home/aketz/Zotero/storage/JXT7CDNC/Robinson et al. - 2012 - Emerging prion disease drives host selection in a .pdf}
