  pages = {12362-12373},
  file = {/home/aketz/Zotero/storage/5D3MM4IK/Velásquez et al. - 2015 - Deer Prion Proteins Modulate the Emergence and Ada.pdf;/home/aketz/Zotero/storage/EU34H5G4/12362.html},
