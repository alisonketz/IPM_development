  author = {Sinclair, A R E},
  year = {1998},
  pages = {399--409}
}

@article{link2010a,
  title = {Uncovering a {{Latent Multinomial}}: {{Analysis}} of {{Mark}}\textendash{{Recapture Data}} with {{Misidentification}}},
