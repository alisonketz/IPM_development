  journal = {The Journal of Wildlife Management},
  author = {Silbernagel, Erin R. and Skelton, Nicole K. and Waldner, Cheryl L. and Boolinger, Trent K.},
  year = {2011},
  pages = {1453-1461},
  file = {/home/aketz/Zotero/storage/DJYYPTBA/SILBERNAGEL et al. - 2011 - Interaction Among Deer in a Chronic Wasting Diseas.pdf}
