  pages = {2481-2490},
  file = {/home/aketz/Zotero/storage/X6KQVXCM/Frost et al. - 2009 - Probabilistic movement model with emigration simul.pdf;/home/aketz/Zotero/storage/M8LMSPRM/S0304380009004396.html}
